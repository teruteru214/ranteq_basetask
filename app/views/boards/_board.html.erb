<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <%= image_tag board.board_image.url, class: 'ard-img-top' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to board.title, board_path(board) %>
        </h4>
        <%= render 'crud_menus' , board: board %>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="far fa-user"></i> <%= board.user.decorate.full_name %></li>
          <li class="list-inline-item"><i class="far fa-calendar"></i><%= l board.created_at, format: :long %></li>
        </ul>
        <p class="card-text"><%= simple_format(board.body) %></p>
      </div>
    </div>
  </div>
</div>
